{
  "manifest_version": 3,
  "name": "Microsoft Rewards Automator",
  "version": "1.0",
  "description": "Automates daily Microsoft Rewards searches to earn points",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://cn.bing.com/*",
    "https://rewards.microsoft.com/*",
    "https://rewards.bing.com/*",
    "https://login.live.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      }
    },
    "open_in_tab": {
      "description": "在新标签页中打开插件",
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      }
    }
  }
}